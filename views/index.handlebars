{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container">
  <img src="/assets/img/eat-da-burger.png" alt="image of burger" id="burgerPic" class="center">
  <h1 class="text-center">Eat Da Burger!</h1>
  <div class="row">
    <div class="col-md">
      <form class="create-form text-center">

        <div class="form-group">
          <label for="newBurg">Burger Name:</label>
          <input type="text" id="newBurg" name="name">
        <button type="submit" class="btn btn-success addBurgBtn">Add Burger</button>
        </div>



      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h2 class="text-center">Have a Taste!</h2>
      <ul class="list-group text-center">
        {{!-- list each burger from the database upon entry with button to gobble down the burger --}}
        {{#each burgers}}
        {{#unless devoured}}
        <li class="list-group-item"> {{id}}. {{burger_name}}
          <button class="btn btn-sm btn-primary devourBtn" data-id="{{id}}">Gobble me down!</button></li>
        {{/unless}}
        {{/each}}

      </ul>
    </div>

    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h2 class="text-center">Clean Plate Club!</h2>
      <ul class="list-group text-center">
        {{!-- move each eaten burger to new list after user gobbles it down --}}
        {{!-- Add new button for user to clear their plate and delete the burger from the db --}}
        {{#each burgers}}
        {{#if devoured}}
        <li class="list-group-item"> {{id}}. {{burger_name}} <button class="btn btn-sm btn-danger clearBtn" data-id="{{id}}">Clear your plate!</button></li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


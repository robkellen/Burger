{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container">
  <img src="/assets/img/eat-da-burger.png" alt="image of burger" id="burgerPic" class="center">
  <h1 class="text-center">Eat Da Burger!</h1>
  <div class="row">
    <div class="col-md">
      <form class="create-form text-center">

        <div class="form-group">
          <label for="newBurg">Burger Name:</label>
          <input type="text" id="newBurg" name="name">
        </div>


        <button type="submit" class="btn btn-success addBurgBtn">Add a Burger</button>

      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h2 class="text-center">Have a Taste!</h2>
      <ul class="list-group text-center">
        {{#each burgers}}
        {{#unless devoured}}
        <li class="list-group-item"> {{id}}. {{burger_name}}
          <button class="btn btn-sm btn-primary devourBtn" data-id="{{id}}">Gobble me down!</button></li>
        {{/unless}}
        {{/each}}

      </ul>
    </div>

    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h2 class="text-center">Clean Plate Club!</h2>
      <ul class="list-group text-center">
        {{#each burgers}}
        {{#if devoured}}
        <li class="list-group-item">{{id}}.{{burger_name}} </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

